/companies/{companyId}/topics.json:
  uriParameters:
    companyId:
      description: The id of the company being queried
      type: string
      required: true
      displayName: companyId
  get:
    displayName: CompaniesTopicsJsonByCompanyId
    description: Get Company Topics
    responses:
      200:
        description: a list of topic objects within a data envelope.
        body:
          application/json:
            schema: CompaniesTopicsJsonByCompanyIdResponse
    queryParameters:
      page:
        description: Page number
        type: integer
        default: 1
        required: false
        displayName: page
      active_since:
        description: Filter by the time of the last activity in the community. Time is set in seconds since epoch.
        type: integer
        default: 0
        required: false
        displayName: active_since
      company:
        description: Filter by company ID
        type: string
        default: 
        required: false
        displayName: company
      include_archived:
        description: Filter by Archived Topics
        type: boolean
        required: true
        displayName: include_archived
      product:
        description: Filter by product name in API queries where the company is specified (for example, /companies/[company name or company ID]/topics)
        type: string
        default: 
        required: false
        displayName: product
      q:
        description: Search for a particular string
        type: string
        default: 
        required: false
        displayName: q
      query:
        description: Search for a particular string
        type: string
        default: 
        required: false
        displayName: query
      sort:
        description: Sort topics by value
        default: 
        required: false
        displayName: sort
        enum:
        - most_me_toos
        - most_replies
        - recently_active
        - recently_created
        - unanswered
      status:
        description: Filter by style
        default: 
        required: false
        displayName: status
        enum:
        - active
        - complete
        - none
        - pending
        - rejected
      style:
        description: Filter by style
        default: 
        required: false
        displayName: style
        enum:
        - idea
        - praise
        - problem
        - question
        - update
      tag:
        description: Filter by tag
        type: string
        default: 
        required: false
        displayName: tag
      user:
        description: Filter by user ID
        type: string
        default: 
        required: false
        displayName: user
      user_defined_code:
        description: Filter by Private Tags
        type: string
        default: 
        required: false
        displayName: user_defined_code
